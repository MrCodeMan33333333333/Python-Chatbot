import openai

# âœ… Set your OpenAI API key here
API_KEY = 'your_openai_api_key_here'

# âœ… Initialize OpenAI API
openai.api_key = API_KEY

def chat_with_gpt():
    print("ðŸ’¬ AI Chatbot (Type 'quit' to exit)")
    
    # âœ… Infinite loop for chat
    while True:
        # âœ… Get user input
        user_input = input("You: ")
        
        # âœ… Exit if user types 'quit'
        if user_input.lower() == 'quit':
            print("Chatbot: Goodbye! ðŸ‘‹")
            break

        # âœ… Generate response from OpenAI GPT-3.5
        response = openai.ChatCompletion.create(
            model="gpt-3.5-turbo",
            messages=[
                {"role": "system", "content": "You are a helpful Python assistant."},
                {"role": "user", "content": user_input}
            ]
        )

        # âœ… Extract the AI's response
        ai_response = response.choices[0].message['content']
        print(f"Chatbot: {ai_response}")

if __name__ == "__main__":
    chat_with_gpt()
